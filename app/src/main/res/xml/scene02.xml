<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="2000"
        >

        <OnSwipe
            motion:touchAnchorId="@+id/view3"
            motion:touchRegionId="@+id/view3"
            motion:dragDirection="dragDown"/>

        <KeyFrameSet>
            <KeyPosition
                motion:framePosition="20"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@id/text"
                motion:pathMotionArc="flip"
                motion:percentX="0.25"
                motion:percentY="0.65" />
            <KeyPosition
                motion:framePosition="36"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@id/text"
                motion:pathMotionArc="flip"
                motion:percentX="0"
                motion:percentY="0.5" />
            <KeyPosition
                motion:framePosition="52"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@id/text"
                motion:pathMotionArc="startHorizontal"
                motion:percentX="0.5"
                motion:percentY="0.25" />
            <KeyPosition
                motion:framePosition="68"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@id/text"
                motion:pathMotionArc="startVertical"
                motion:percentX="1"
                motion:percentY="0.5" />
            <KeyPosition
                motion:framePosition="84"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@id/text"
                motion:pathMotionArc="none"
                motion:percentX="0.5"
                motion:percentY="0.75" />


            <KeyPosition
                motion:framePosition="16"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/view1"
                motion:pathMotionArc="flip"
                motion:percentX="0.25"
                motion:percentY="0.65" />
            <KeyPosition
                motion:framePosition="32"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/view1"
                motion:pathMotionArc="flip"
                motion:percentX="0"
                motion:percentY="0.5" />
            <KeyPosition
                motion:framePosition="48"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/view1"
                motion:pathMotionArc="startHorizontal"
                motion:percentX="0.5"
                motion:percentY="0.25" />
            <KeyPosition
                motion:framePosition="64"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/view1"
                motion:pathMotionArc="startVertical"
                motion:percentX="1"
                motion:percentY="0.5" />
            <KeyPosition
                motion:framePosition="80"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/view1"
                motion:pathMotionArc="none"
                motion:percentX="0.5"
                motion:percentY="0.75" />


            <KeyPosition
                motion:framePosition="12"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/view2"
                motion:pathMotionArc="flip"
                motion:percentX="0.25"
                motion:percentY="0.65" />
            <KeyPosition
                motion:framePosition="28"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/view2"
                motion:pathMotionArc="flip"
                motion:percentX="0"
                motion:percentY="0.5" />
            <KeyPosition
                motion:framePosition="44"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/view2"
                motion:pathMotionArc="startHorizontal"
                motion:percentX="0.5"
                motion:percentY="0.25" />
            <KeyPosition
                motion:framePosition="60"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/view2"
                motion:pathMotionArc="startVertical"
                motion:percentX="1"
                motion:percentY="0.5" />
            <KeyPosition
                motion:framePosition="74"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/view2"
                motion:pathMotionArc="none"
                motion:percentX="0.5"
                motion:percentY="0.75" />


            <KeyPosition
                motion:framePosition="8"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/view3"
                motion:pathMotionArc="flip"
                motion:percentX="0.25"
                motion:percentY="0.65" />
            <KeyPosition
                motion:framePosition="24"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/view3"
                motion:pathMotionArc="flip"
                motion:percentX="0"
                motion:percentY="0.5" />
            <KeyPosition
                motion:framePosition="40"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/view3"
                motion:pathMotionArc="startHorizontal"
                motion:percentX="0.5"
                motion:percentY="0.25" />
            <KeyPosition
                motion:framePosition="56"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/view3"
                motion:pathMotionArc="startVertical"
                motion:percentX="1"
                motion:percentY="0.5" />
            <KeyPosition
                motion:framePosition="72"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/view3"
                motion:pathMotionArc="none"
                motion:percentX="0.5"
                motion:percentY="0.75" />

        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/text">
            <Layout
                android:layout_width="60dp"
                android:layout_height="60dp"
                motion:layout_constraintLeft_toLeftOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintRight_toRightOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:pathMotionArc="startVertical"
                />
        </Constraint>
        <Constraint
            android:id="@+id/view1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:pathMotionArc="startVertical"
            />
        <Constraint
            android:id="@+id/view2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:pathMotionArc="startVertical"
            />
        <Constraint
            android:id="@+id/view3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:pathMotionArc="startVertical"
            />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/text">
            <Layout
                android:layout_width="60dp"
                android:layout_height="60dp"
                motion:layout_constraintLeft_toLeftOf="parent"
                motion:layout_constraintRight_toLeftOf="@+id/view1"
                motion:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"
                motion:layout_constraintHorizontal_chainStyle="spread_inside"
                />
        </Constraint>
        <Constraint
            android:id="@+id/view1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            motion:layout_constraintLeft_toRightOf="@+id/text"
            motion:layout_constraintRight_toLeftOf="@+id/view2"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            />
        <Constraint
            android:id="@+id/view2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            motion:layout_constraintLeft_toRightOf="@+id/view1"
            motion:layout_constraintRight_toLeftOf="@+id/view3"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            />
        <Constraint
            android:id="@+id/view3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            motion:layout_constraintLeft_toRightOf="@+id/view2"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            />
    </ConstraintSet>
</MotionScene>